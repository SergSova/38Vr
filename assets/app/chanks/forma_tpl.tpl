<h3>[[+h3]]</h3>
<div class="forma">
    <div class="post-form">
        <form id="message" method="POST" class="success">
            <div class="input">
                <input type="text" name="name"
                       placeholder="HELENA GANS">
            </div>
            <div class="input">
                <input type="text" name="phone"
                       placeholder="PHONE">
            </div>

            <div class="input">
                <input type="text" name="email"
                       placeholder="EMAIL ADDRESS">
            </div>
            <div class="clear"></div>


            <div class="form-text">[[+text]]</div>
            <div id="messager">
                <div class="buttons-form">submit</div>
            </div>
        </form>
    </div>
</div>
